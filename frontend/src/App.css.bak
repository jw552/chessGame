.app-container {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 4rem;
  background-color: #121212;
  color: white;
  min-height: 100vh;
  padding: 2rem;
  box-sizing: border-box;
}

.board-and-captures {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 1rem;
}

.capture-zone {
  border: 2px solid #444;
  padding: 0.5rem;
  min-height: 2rem;
  width: 100%;
  text-align: center;
}

.sidebar {
  background-color: #1e1e1e;
  padding: 1rem;
  width: 250px;
  color: white;
  border-left: 2px solid #444;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  align-self: flex-start;
  height: 560px; /* Match board height (8 x 70px) */
  border-radius: 8px;
}

.sidebar-section {
  border: 1px solid #555;
  padding: 0.75rem;
  border-radius: 5px;
  background-color: #2a2a2a;
}

.timers {
  display: flex;
  justify-content: space-between;
  gap: 0.5rem;
}

.timer-box {
  flex: 1;
  text-align: center;
  padding: 0.5rem;
  border: 1px solid #666;
  background-color: #333;
  border-radius: 4px;
}
